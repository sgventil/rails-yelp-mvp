<div class="container">
  <h1>Restaurant</h1>
  raise
  <h3><% @restaurant.name %></h3>
  <h5><%= @restaurant.address %></h5>
  <p><%= @restaurant.phone_number %></p>
  <h5>Reviews:</h5>
  <ul class="list-unstyled">
    <% @restaurant.reviews.each do |review| %>
      <li>
        <% if review.persisted? %>
          <p><%= review.content %></p>
          <%= "⭐" * review.rating %>
          <%= link_to "Delete", review_path(review), data: { turbo_method: :delete, turbo_confirm: "Sure?" } %>
        <% end %>
      </li>
      <hr>
    <% end %>

  </ul>>
  <h1>New Review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content  %>
    <%= f.input :rating %>
    <%= f.submit "Create Review", class: "btn btn-secondary"  %>
  <% end %>
</div>
